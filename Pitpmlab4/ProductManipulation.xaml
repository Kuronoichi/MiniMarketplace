<Window x:Class="Pitpmlab4.ProductManipulation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Pitpmlab4"
        mc:Ignorable="d"
        Title="ProductManipulation" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Label Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="15" Content="Product Name"/>
        
        <TextBox x:Name="tb_Name" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" FontSize="15"/>
        
        <Label Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="15" Content="Product Price"/>
        
        <TextBox x:Name="tb_Price" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="3" FontSize="15"/>
        
        <Label Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="15" Content="Product Image"/>
        
        <TextBox x:Name="tb_ImagePath" Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="2" FontSize="15"/>
        
        <Button x:Name="b_SelectImage" Grid.Column="3" Grid.Row="6" Content="Select Image" Click="B_SelectImage_OnClick"/>
        
        <Button x:Name="b_EndManipulation" Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="3" Height="25" Content="End Manipulation" Click="B_EndManipulation_OnClick"/>
    </Grid>
</Window>
